<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Subjects - Exam Application System</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      background-color: #f5f5f5;
    }

    .header {
      background-color: #007bff;
      color: white;
      text-align: center;
      padding: 20px 0;
      font-size: 24px;
      font-weight: bold;
    }

    .container {
      display: flex;
    }

    .sidebar {
      width: 200px;
      background-color: #f4f4f4;
      padding: 20px;
      height: 100vh;
    }

    .sidebar h3 {
      text-align: center;
    }

    .sidebar a {
      display: block;
      color: #007bff;
      padding: 10px;
      text-decoration: none;
      border-radius: 5px;
    }

    .sidebar a:hover {
      background-color: #ddd;
    }

    .main {
      flex: 1;
      padding: 30px;
    }

    .cards {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
    }

    .card {
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      flex: 1;
      min-width: 300px;
    }

    .card h2 {
      margin-top: 0;
      color: #007bff;
    }

    .card.right h2 {
      color: #dc3545;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }

    th, td {
      border: 1px solid #ccc;
      padding: 10px;
      text-align: center;
    }

    th {
      background-color: #007bff;
      color: white;
    }

    .delete-btn {
      background-color: #dc3545;
      color: white;
      padding: 6px 12px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .form-group {
      margin-bottom: 20px;
    }

    input[type="text"] {
      width: 100%;
      padding: 10px;
      font-size: 16px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    button[type="submit"] {
      padding: 10px 20px;
      background-color: #ffc107;
      color: black;
      border: none;
      border-radius: 5px;
      font-weight: bold;
      cursor: pointer;
    }

    button[type="submit"]:hover {
      background-color: #e0a800;
    }
  </style>
</head>
<body>

  <div class="header">
    Welcome to the Exam Application System
  </div>

  <div class="container">
    <!-- Sidebar -->
    <div class="sidebar">
      <h3>Admin</h3>
      <a href="/admin">Dashboard</a>
      <a href="/subject">Subject</a>
      <a href="/admin/exam">Exam</a>
      <a href="/admin/questions">Questions</a>
      <a href="/admin/schedule">Schedule</a>
    </div>

    <!-- Main Content -->
    <div class="main">
      <div class="cards">
        <!-- Left Card: Existing Courses -->
        <div class="card">
          <h2>Existing Courses</h2>
          <table>
            <thead>
              <tr>
                <th>Course ID</th>
                <th>Name</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (subjects && subjects.length > 0) { %>
                <% subjects.forEach(subject => { %>
                  <tr>
                    <td><%= subject.cid %></td>
                    <td><%= subject.cname %></td>
                    <td>
                      <form method="GET" action="/subject/delete/<%= subject.cid %>">
                        <button class="delete-btn">Delete</button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="3">No courses found</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Right Card: Add New Course -->
        <div class="card right">
          <h2>Add New Course</h2>
          <form action="/subject" method="POST">
            <div class="form-group">
              <label for="cname" style="display:block; margin-bottom: 5px;">Course Name</label>
              <input type="text" id="cname" name="cname" placeholder="Enter course name" required />
            </div>
            <button type="submit">Add Course</button>
          </form>
        </div>
      </div>
    </div>
  </div>

</body>
</html>
